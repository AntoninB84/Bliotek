<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="addbook_et_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/white</item>
    </style>
    <style name="addbook_tv_field">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">bottom</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    <style name="addbook_linlyt_fields">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="bookInfos_tv_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:layout_weight">7.5</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="bookInfos_tv_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_weight">2.5</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="bookInfos_tv_big_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="bookInfos_llyt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">10</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
</resources>